@model List<Post>
@{
    ViewBag.Title = "Anasayfa";
}

<h3 class="pb-4 mb-4 font-italic border-bottom">
    @ViewBag.SubTitle
</h3>

@foreach (var item in Model)
{
    <div class="blog-post">
        <h2 class="blog-post-title">@item.Title</h2>
        <p class="blog-post-meta">@item.CreationTime <a href="#">@item.Author.UserName</a></p>

        @Html.Raw(item.Content)
    </div><!-- /.blog-post -->
}

<nav class="blog-pagination">
    <a class="btn btn-outline-primary" href="@Url.Action("Index", "Home", new
                                        {
                                            cid = ViewBag.cid,
                                            page = ViewBag.nextPage
                                        })">
        &laquo; Daha eski
    </a>
    <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Home", new
                                        {
                                            cid = ViewBag.cid,
                                            page = ViewBag.prevPage
                                        })" tabindex="-1" aria-disabled="true">
        Daha yeni &raquo;
    </a>
</nav>